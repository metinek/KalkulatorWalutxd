<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_4M_06_KalkulatorWalut.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_4M_06_KalkulatorWalut"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <Tab>
            <ShellContent
                Title="Kalkulator Walut"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>

            <ShellContent
                Title="Wzrosty i Spadki"
                ContentTemplate="{DataTemplate local:KursWzrost}"
                Route="KursWzrost"/>
        </Tab>

    </FlyoutItem>

</Shell>
